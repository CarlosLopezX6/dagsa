---
import { getI18N } from "../../i18n";

const { currentLocale } = Astro;                   
const i18n = getI18N( { currentLocale } );
---


<section class="flex items-center py-6">
    <img
        src="/images/services/redArrow.webp" 
        alt="arrow"
        class="h-full w-28 md:w-48 lg:w-60"
    />
    <h1 class="ml-4 text-4xl md:text-6xl lg:text-7xl font-extrabold text-[#233E1D] uppercase">
        { i18n.SERVICES.TITLE }
    </h1>
</section>