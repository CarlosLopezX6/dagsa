---
import Layout from "../../layouts/Layout.astro";
import TitleSection from "../services/TitleSection.astro";
import SectoresSlider from "../services/SectoresSlider.astro";
import ImportacionSection from "../services/ImportacionSection.astro";
import LogisticaSection from "../services/LogisticaSection.astro";
import AutomotrizSection from "../services/AutomotrizSection.astro";
import { getI18N } from "../../i18n";

const { currentLocale } = Astro;                   
const i18n = getI18N( { currentLocale } );
---

<Layout title={ i18n.SERVICES.LAYOUT.TITLE }>
	<main>
        <SectoresSlider />
        <TitleSection />
        <ImportacionSection />
        <LogisticaSection />
        <AutomotrizSection />
    </main>
</Layout>