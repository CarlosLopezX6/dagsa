---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '@fontsource-variable/roboto-condensed';
//import robotoCondensedNormal from '@fontsource-variable/roboto-condensed/files/roboto-condensed-latin-wght-normal.woff2?url';
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions';
import { getLangFromUrl } from '../i18n/utils';
import WhatsappBtn from '../components/WhatsappBtn.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={ lang }>
	<head>
		
		<!-- HTML Meta Tags -->
		<meta charset="UTF-8" />
		<meta name="description" content="DAGSA Logistics" />
		<meta name="viewport" content="width=device-width" />

		<!-- Google / Search Engine Tags -->
		<meta itemprop="name" content={ title } />
		<meta itemprop="description" content="DAGSA Logistics" />
		<meta itemprop="image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746220682/Clients/dagsa_logo_ojpcyl.webp" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={ title } />
		<meta property="og:description" content="DAGSA Logistics" />
		<meta property="og:image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746220682/Clients/dagsa_logo_ojpcyl.webp" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:title" content={ title } />
		<meta name="twitter:description" content="DAGSA Logistics" />
		<meta name="twitter:image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746220682/Clients/dagsa_logo_ojpcyl.webp" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{ title }</title>


		<link rel="preload" href="/images/services/alimenticio.webp" as="image" />
		<link rel="preload" href="/images/services/automotriz.webp" as="image" />
		<link rel="preload" href="/images/services/carga.webp" as="image" />
		<link rel="preload" href="/images/services/manufacturero.webp" as="image" />
		<link rel="preload" href="/images/services/metalurgico.webp" as="image" />

		
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href='@fontsource-variable/roboto-condensed'
			crossorigin="anonymous"
		/> -->
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href={robotoCondensedNormal}
			crossorigin="anonymous"
		/> -->

		<ClientRouter />

		<script is:inline src="/scripts/i18nSectoresSlider.js"></script>
		<script is:inline src="/scripts/initSectoresSlider.js"></script>
		<script is:inline src="/scripts/i18nHomeSlider.js"></script>
		<script is:inline src="/scripts/initHomeSlider.js"></script>

		<!-- AOS -->
		<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	</head>
	<body class="flex flex-col min-h-screen">
		
		<Navbar />
			<main class="flex-grow">
				<slot />
				<WhatsappBtn />
			</main>
		<Footer />
		
		<script is:inline>
			document.addEventListener("astro:page-load", () => {
				AOS.init();
			});
		</script>
	</body>
</html>

<style>
	html {
        font-family: 'Roboto Condensed Variable', system-ui, sans-serif;
    }
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	#header-nav {
        animation: blur linear both;
        animation-timeline: scroll();
        animation-range: 0 500px;
    }

	@keyframes blur {
		to {
			box-shadow:
			0px 5px 50px -5px rgba(0, 0, 0, 0.1),
			0px 0px 0 1px rgba(0, 0, 0, 0.3);
			background: rgba(0, 0, 0, 0.3);
			backdrop-filter: blur(10px);
		}
	}

	html, body {
		overflow-x: hidden;
	}
</style>