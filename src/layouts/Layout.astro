---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '@fontsource-variable/roboto-condensed';
//import robotoCondensedNormal from '@fontsource-variable/roboto-condensed/files/roboto-condensed-latin-wght-normal.woff2?url';
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={ lang }>
	<head>
		<!-- HTML Meta Tags -->
		<meta charset="UTF-8" />
		<meta name="description" content="DAGSA Logistics" />
		<meta name="viewport" content="width=device-width" />

		<!-- Google / Search Engine Tags -->
		<meta itemprop="name" content={ title } />
		<meta itemprop="description" content="DAGSA Logistics" />
		<meta itemprop="image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746173378/Clients/footerContact_tvrzpr.webp" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={ title } />
		<meta property="og:description" content="DAGSA Logistics" />
		<meta property="og:image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746173378/Clients/footerContact_tvrzpr.webp" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:title" content={ title } />
		<meta name="twitter:description" content="DAGSA Logistics" />
		<meta name="twitter:image" content="https://res.cloudinary.com/carloslopezx6/image/upload/v1746173378/Clients/footerContact_tvrzpr.webp" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{ title }</title>
		
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href='@fontsource-variable/roboto-condensed'
			crossorigin="anonymous"
		/> -->
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href={robotoCondensedNormal}
			crossorigin="anonymous"
		/> -->
		<!-- <ClientRouter /> -->
	</head>
	<body>
		<body class="flex flex-col min-h-screen">
			<Navbar />
				<main class="flex-grow">
					<slot />
				</main>
			<Footer />
		</body>
	</body>
</html>

<style>
	html {
        font-family: 'Roboto Condensed Variable', system-ui, sans-serif;
    }
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>