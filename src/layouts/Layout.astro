---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '@fontsource-variable/roboto-condensed';
//import robotoCondensedNormal from '@fontsource-variable/roboto-condensed/files/roboto-condensed-latin-wght-normal.woff2?url';
import './src/styles/global.css'
import { ClientRouter } from 'astro:transitions';
import { getLangFromUrl } from '../i18n/utils';

const { title, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={ lang }>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{ title }</title>
		
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href='@fontsource-variable/roboto-condensed'
			crossorigin="anonymous"
		/> -->
		<!-- <link
			rel="preload"
			as="font"
			type="font/woff2"
			href={robotoCondensedNormal}
			crossorigin="anonymous"
		/> -->
		<ClientRouter />
	</head>
	<body>
		<body class="flex flex-col min-h-screen">
			<Navbar />
				<main class="flex-grow">
					<slot />
				</main>
			<Footer />
		</body>
	</body>
</html>

<style>
	html {
        font-family: 'Roboto Condensed Variable', system-ui, sans-serif;
    },
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>